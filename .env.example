# MediForge Environment Configuration
# Copy this file to .env.local and fill in your values

# Application
NODE_ENV=development
APP_NAME=MediForge
APP_URL=http://localhost:3000
API_URL=http://localhost:8080

# Healthcare Configuration
HEALTHCARE_MODE=true
COMPLIANCE_LEVEL=HIPAA
AUDIT_ENABLED=true
ENCRYPTION_ALGORITHM=AES-256-GCM
PHI_ENCRYPTION_KEY=your-256-bit-encryption-key-here
SESSION_TIMEOUT_MINUTES=15
BREAK_GLASS_ENABLED=true

# FHIR Configuration
FHIR_VERSION=R4
FHIR_BASE_URL=/api/fhir
FHIR_PROFILES=us-core,smart-on-fhir

# Claude AI Configuration
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-opus-20240229
AI_GENERATION_ENABLED=true
MAX_GENERATION_TOKENS=4096

# Database - PostgreSQL (Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/mediforge
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d
PASSWORD_MIN_LENGTH=12
MFA_ENABLED=true

# Deployment - Vercel
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id

# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_REPO=yourusername/mediforge
GITHUB_BRANCH=main

# Email Configuration
EMAIL_FROM=noreply@mediforge.health
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Feature Flags
ENABLE_TELEMEDICINE=true
ENABLE_E_PRESCRIBING=true
ENABLE_LAB_INTEGRATION=true
ENABLE_BILLING=true
ENABLE_PATIENT_PORTAL=true
ENABLE_ANALYTICS=true

# Compliance & Audit
AUDIT_LOG_RETENTION_DAYS=2555
HIPAA_COMPLIANCE_MODE=true
GDPR_COMPLIANCE_MODE=false
DATA_RESIDENCY_REGION=us